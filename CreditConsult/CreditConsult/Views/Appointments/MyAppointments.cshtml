@model IEnumerable<AppointmentViewModel>
@{
    ViewData["Title"] = "MyAppointments";
}

<section id="appointments" class="services add-edit-service">
    <div class="section-title add-edit-service">
        <h2>Appointments</h2>
        <p>View appointments</p>
    </div>

    <div class="container">

        @if (Model.Count() < 1)
        {
            <div class="text-center">
                <h2>You have no appointments to view.</h2>
            </div>
        }
        else
        {
            <form method="post">
                <div class="row">

                    @foreach (var appointment in Model)
                    {


                        <div class="col-md-3">
                            <div class="card mb-4 icon-box">
                                <div class="icon"><i class="fa-solid fa-handshake"></i></div>
                                <div class="card-body">
                                    <p>Patient: @appointment.ClientName</p>
                                    <p>Doctor: @appointment.EmployeeName</p>
                                    <p>Date: @appointment.Date</p>
                                    <p>Time: @appointment.Time</p>
                                    <div class="text-center">
                                        <input type="submit" asp-controller="Appointments" asp-action="Remove" asp-route-id="@appointment.Id" class="btn btn-danger rounded-pill mt-3" value="Cancel Appointment" />
                                    </div>
                                </div>
                            </div>
                        </div>


                    }
                </div>
            </form>
        }
    </div>
</section>

@section Scripts {
     <partial name="_ValidationScriptsPartial" />
}